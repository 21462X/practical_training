/* pages/my_class/my_class.wxss */

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  border-bottom: solid rgb(245, 245, 245);
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  color: rgb(249, 167, 34);
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 90rpx;
  right: 90rpx;
  height: 6rpx;
  background: rgb(255, 167, 5);
}

.tab_1-box {
  display: flex;
  flex-direction: column;
  align-items: center;

  margin-top: 50rpx;
}

.tab_1-box image {
  width: 414rpx;
  height: 302rpx;
}

.tab_1-inner-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 50rpx;
}

.tab_2-box {
  height: 160rpx;
  display: flex;
  flex-direction: row;
  padding: 60rpx 30rpx;
  border-bottom: solid rgb(245, 245, 245);
}

.tab_2-inner-box {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}
.remark {
  font-size: 25rpx;
  color: rgb(118,118,118);
}